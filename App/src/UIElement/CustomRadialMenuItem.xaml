<RadialMenu:RadialMenuItem x:Class="Taction.UIElement.CustomRadialMenuItem"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:Taction"
		xmlns:UIElement="clr-namespace:Taction.UIElement"
		xmlns:RadialMenu="clr-namespace:RadialMenu.Controls;assembly=RadialMenu"
		mc:Ignorable="d"
		d:DesignHeight="300" d:DesignWidth="300">
	<RadialMenu:RadialMenuItem.Resources>
		<Style TargetType="UIElement:CustomRadialMenuItem">
			<Setter Property="Background" Value="#FFDDDDDD" />
			<Setter Property="Padding" Value="0" />
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="BorderBrush" Value="#FFDDDDDD" />
			<Setter Property="InnerRadius" Value="70" />
			<Setter Property="OuterRadius" Value="120" />
			<Setter Property="ContentRadius" Value="95" />

			<Setter Property="EdgePadding" Value="0" />
			<Setter Property="EdgeBackground" Value="#00000000" />
			<Setter Property="EdgeInnerRadius" Value="120" />
			<Setter Property="EdgeOuterRadius" Value="10000" />

			<Setter Property="ArrowRadius" Value="10" />
			<Setter Property="ArrowBackground" Value="Transparent" />
			<Setter Property="ArrowBorderBrush" Value="Transparent" />

			<Setter Property="IconForeground" Value="#FF000000" />

			<Style.Resources>
				<Style TargetType="Grid">
					<Setter Property="Width" Value="50" />
					<Setter Property="Height" Value="50" />
					<Setter Property="HorizontalAlignment" Value="Stretch" />
					<Setter Property="VerticalAlignment" Value="Stretch" />
					<Style.Resources>
						<Style TargetType="TextBlock">
							<Setter Property="Foreground" Value="#FF222222" />
							<Setter Property="HorizontalAlignment" Value="Center" />
							<Setter Property="VerticalAlignment" Value="Center" />
							<Style.Triggers>
								<DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=RadialMenu:RadialMenuItem}, Path=IsMouseOver}" Value="True">
									<Setter Property="Foreground" Value="#FFDDDDDD" />
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</Style.Resources>
				</Style>
			</Style.Resources>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="DeepSkyBlue" />
					<Setter Property="BorderBrush" Value="DeepSkyBlue" />
					<Setter Property="EdgeBackground" Value="#00000000" />
				</Trigger>
			</Style.Triggers>
		</Style>
	</RadialMenu:RadialMenuItem.Resources>
	<Grid>
		<Border x:Name="LayoutRoot"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Background="{Binding IconBackground}"
				CornerRadius="{Binding IconCornerRadius}"
				BorderBrush="{Binding IconBorderBrush}"
				BorderThickness="{Binding IconBorderThickness}"
				Margin="{Binding IconMargin}"
				Padding="{Binding IconPadding}"
				TextBlock.FontFamily="{Binding IconFontFamily}"
				TextBlock.FontSize="{Binding IconFontSize}"
				TextBlock.FontWeight="{Binding IconFontWeight}"
				TextBlock.Foreground="{Binding IconForeground}">
			<ContentPresenter x:Name="Content"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Content="{Binding IconContent}" />
		</Border>
	</Grid>
</RadialMenu:RadialMenuItem>
