{
	"id": "http://flareburst.net/taction/layout.schema.json",
	"type": "object",
	"properties": {
		"opacity": {
			"type": "number",
			"default": 1.0
		},
		"opacity-hide": {
			"type": "number",
			"default": 0.0
		},
		"fade-animation-time": {
			"type": "integer",
			"default": 500
		},
		"size": {
			"type": "number",
			"minimum": 0,
			"exclusiveMinimum": true
		},
		"version": {"type": "integer"},
		"name": {"type": "string"},
		"disable-fade-animation": {"type": "boolean"},
		"disable-hide": {"type": "boolean"},
		"border": {"$ref": "#/definitions/borderType"},
		"orientation": {"$ref": "#/definitions/orientationType"},
		"items": {"$ref": "#/definitions/itemsType"}
	},
	"additionalProperties": false,
	"required": ["version", "size", "orientation", "items"],

	"definitions": {
		"orientationType": {
			"type": "string",
			"enum": ["vertical", "horizontal"]
		},
		"borderThicknessType": {
			"type": "object",
			"properties": {
				"top": {"type": "number"},
				"right": {"type": "number"},
				"bottom": {"type": "number"},
				"left": {"type": "number"},
			},
		},
		"borderType": {
			"type": "object",
			"properties": {
				"thickness": {"type": "string"},
				"color": {"$ref": "#/definitions/colorType"}
			},
			"additionalProperties": false,
		},
		"textType": {
			"type": "object",
			"properties": {
				"size": {
					"type": "number",
					"minimum": 0,
					"exclusiveMinimum": true
				},
				"value": {"type": "string"},
				"font": {"type": "string"},
				"color": {"$ref": "#/definitions/colorType"},
			},
			"additionalProperties": false,
			"required": ["value"]
		},
		"itemsType": {
			"type": "array",
			"items": {
				"oneOf": [
					{"$ref": "#/definitions/pivotItemType"},
					{"$ref": "#/definitions/holdItemType"},
					{"$ref": "#/definitions/tapItemType"},
					{"$ref": "#/definitions/toggleItemType"},
					{"$ref": "#/definitions/moveItemType"}
				]
			}
		},
		"pivotItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["pivot"]
				},
				"size": {
					"type": "number",
					"minimum": 0,
					"exclusiveMinimum": true
				},
				"items": {"$ref": "#/definitions/itemsType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "items"]
		},
		"holdItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["hold"]
				},
				"size": {
					"type": "number",
					"minimum": 0,
					"exclusiveMinimum": true
				},
				"command": {"type": "string"},
				"text": {"$ref": "#/definitions/textType"},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "command"]
		},
		"tapItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["tap"]
				},
				"size": {
					"type": "number",
					"minimum": 0,
					"exclusiveMinimum": true
				},
				"command": {"type": "string"},
				"text": {"$ref": "#/definitions/textType"},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "command"]
		},
		"toggleItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["toggle"]
				},
				"size": {
					"type": "number",
					"minimum": 0,
					"exclusiveMinimum": true
				},
				"command": {"type": "string"},
				"text": {"$ref": "#/definitions/textType"},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "command"]
		},
		"moveItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["move"]
				},
				"size": {
					"type": "number",
					"minimum": 0,
					"exclusiveMinimum": true
				},
				"text": {
					"$ref": "#/definitions/textType",
					"default": "☰☰"
				},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size"]
		},
		"colorType": {
			"oneOf": [
				{"$ref": "#/definitions/imageColorType"},
				{"$ref": "#/definitions/solidColorType"},
				{"$ref": "#/definitions/gradientColorType"}
			]
		},
		"imageColorType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["image"]
				},
				"source": {"type": "string"},
				"tile": {
					"type": "string",
					"enum": ["none", "normal", "flip-x", "flip-y", "flip-xy"]
				},
				"stretch": {
					"type": "string",
					"enum": ["none", "fill", "uniform", "uniform-fill"]
				}
			},
			"additionalProperties": false,
			"required": ["type", "source"]
		},
		"solidColorType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["solid"]
				},
				"value": {"type": "string"},
			},
			"additionalProperties": false,
			"required": ["type", "value"]
		},
		"gradientColorType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["gradient"]
				},
				"angle": {
					"description": "The gradient line's angle of direction. A value of 0 goes from bottom to top; increasing values rotate clockwise from there.",
					"type": "number",
					"default": 0
				},
				"values": {
					"type": "array",
					"items": {
						"type": "string",
					}
				},
			},
			"additionalProperties": false,
			"required": ["type", "values"]
		}
	}
}
