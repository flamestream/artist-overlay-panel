{
	"id": "http://flareburst.net/taction/layout.schema.json",
	"type": "object",
	"properties": {
		"opacity": {
			"type": "number",
			"default": 1.0
		},
		"opacityHide": {
			"type": "number",
			"default": 0.0
		},
		"fadeAnimationTime": {
			"type": "integer",
			"default": 500
		},
		"version": {"type": "integer"},
		"size": {"type": "integer"},
		"disableFadeAnimation": {"type": "boolean"},
		"disableHide": {"type": "boolean"},
		"orientation": {"$ref": "#/definitions/orientationType"},
		"items": {"$ref": "#/definitions/itemsType"}
	},
	"additionalProperties": false,
	"required": ["version", "size", "orientation", "items"],

	"definitions": {
		"orientationType": {
			"type": "string",
			"enum": ["vertical", "horizontal"]
		},
		"borderThicknessType": {
			"type": "object",
			"properties": {
				"top": {"type": "number"},
				"right": {"type": "number"},
				"bottom": {"type": "number"},
				"left": {"type": "number"},
			},
		},
		"borderType": {
			"type": "object",
			"properties": {
				"thickness": {"$ref": "#/definitions/borderThicknessType"},
				"color": {"$ref": "#/definitions/colorType"}
			},
			"additionalProperties": false,
		},
		"textType": {
			"type": "object",
			"properties": {
				"value": {"type": "string"},
				"size": {"type": "integer"},
				"font": {"type": "string"},
				"color": {"$ref": "#/definitions/colorType"},
			},
			"additionalProperties": false,
			"required": ["value"]
		},
		"itemsType": {
			"type": "array",
			"items": {
				"oneOf": [
					{"$ref": "#/definitions/pivotItemType"},
					{"$ref": "#/definitions/holdItemType"},
					{"$ref": "#/definitions/tapItemType"},
					{"$ref": "#/definitions/toggleItemType"},
					{"$ref": "#/definitions/moveItemType"}
				]
			}
		},
		"pivotItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["pivot"]
				},
				"size": {"type": "integer"},
				"items": {"$ref": "#/definitions/itemsType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "items"]
		},
		"holdItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["hold"]
				},
				"size": {"type": "integer"},
				"command": {"type": "string"},
				"text": {"$ref": "#/definitions/textType"},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "command"]
		},
		"tapItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["tap"]
				},
				"size": {"type": "integer"},
				"command": {"type": "string"},
				"text": {"$ref": "#/definitions/textType"},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "command"]
		},
		"toggleItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["toggle"]
				},
				"size": {"type": "integer"},
				"command": {"type": "string"},
				"text": {"$ref": "#/definitions/textType"},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size", "command"]
		},
		"moveItemType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["move"]
				},
				"size": {"type": "integer"},
				"text": {
					"$ref": "#/definitions/textType",
					"default": "☰☰"
				},
				"color": {"$ref": "#/definitions/colorType"},
				"border": {"$ref": "#/definitions/borderType"},
			},
			"additionalProperties": false,
			"required": ["type", "size"]
		},
		"colorType": {
			"oneOf": [
				{"$ref": "#/definitions/imageColorType"},
				{"$ref": "#/definitions/solidColorType"},
				{"$ref": "#/definitions/gradientColorType"}
			]
		},
		"imageColorType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["image"]
				},
				"source": {"type": "string"},
				"tile": {
					"type": "string",
					"enum": ["none", "normal", "flipX", "flipY", "FlipXY"]
				},
				"stretch": {
					"type": "string",
					"enum": ["none", "fill", "uniform", "uniformFill"]
				}
			},
			"additionalProperties": false,
			"required": ["type", "source"]
		},
		"solidColorType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["solid"]
				},
				"value": {"type": "string"},
			},
			"additionalProperties": false,
			"required": ["type", "value"]
		},
		"gradientColorType": {
			"type": "object",
			"properties": {
				"type": {
					"type": "string",
					"enum": ["gradient"]
				},
				"values": {
					"type": "array",
					"items": {
						"type": "string",
					}
				},
			},
			"additionalProperties": false,
			"required": ["type", "values"]
		}
	}
}